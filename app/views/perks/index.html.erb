<div class="my-3 my-md-5">
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">
        Perks
      </h1>
      <div class="page-options d-flex">
        <% if policy(Perk).new? %>
          <%= link_to 'Ajouter un Perk', new_perk_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Perks</h3>
      </div>
      
      <div class="table-responsive">
        <table class="table card-table table-striped table-vcenter">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Description</th>
              <th>Offre</th>
              <th>Site</th>
              <% if policy(Perk).update? %>
                <th>Actions</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @perks.each do |perk| %>
              <tr>
                <td>
                  <%= image_tag(perk.logo, height: '40') rescue nil %>
                  <%= perk.name %>
                </td>
                <td><%= simple_format(perk.description) rescue "" %></td>
                <td><%= simple_format(perk.offer) rescue "" %></td>
                <td><%= link_to perk.url, perk.url, :target => "_blank" rescue "" %></td>
                <% if policy(Perk).update? %>
                  <td class="w-1">
                    <% if policy(perk).update? %>
                      <%= link_to edit_perk_path(perk) do %>
                        <i class="fe fe-edit"></i>
                      <% end %>
                    <% end %>
                    <% if policy(perk).destroy? %>
                      <%= link_to perk, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fe fe-trash"></i>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
